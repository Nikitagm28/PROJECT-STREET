<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Добавлено разрешение на интернет -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- Добавлено разрешение на запись во внешнее хранилище -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/brands"
        android:label="@string/app_name"
        android:roundIcon="@drawable/brands"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectstreetKotlinver2"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity android:name=".BrandsActivity" />
        <activity android:name=".LoginActivity"/>
        <activity android:name=".ProductActivity"/>
        <activity android:name=".BasketActivity" />
        <activity android:name=".SettingActivity"/>
        <activity android:name=".BasicActivity"/>
        <activity android:name=".FavoritesActivity"/>


        <activity
            android:name=".AuthenticationActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProjectstreetKotlinver2">
        </activity>
    </application>


</manifest>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="144dp"
        android:layout_height="142dp"
        android:src="@drawable/zipka"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:textColor="#000000"
        android:layout_toEndOf="@id/product_image"
        android:text="FMM HOODIE in BLACK"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/product_image" />

    <TextView
        android:id="@+id/product_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotolight"
        android:layout_toEndOf="@id/product_image"
        android:textSize="0sp"
        android:textColor="#9C9C9C"
        android:layout_marginStart="8dp"
        android:layout_below="@id/product_title" />

    <TextView
        android:id="@+id/product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/product_image"
        android:text="L"
        android:textColor="#000000"
        android:fontFamily="@font/robotobold"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/product_brand" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:textColor="#000000"
        android:layout_toEndOf="@id/product_image"
        android:text="6 000 ла"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/product_size" />

    <ImageView
        android:id="@+id/product_favorite"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/product_price"
        android:layout_alignStart="@id/product_price"
        android:layout_marginTop="8dp"
        android:src="@drawable/followbascet" />

    <ImageView
        android:id="@+id/product_delete"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_below="@id/product_price"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/product_favorite"
        android:src="@drawable/cancelbascet" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_favorite"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@id/product_price"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="-" />

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/robotolight"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/product_selected"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:background="@drawable/checkbox_selector"
        android:button="@android:color/transparent"
        android:padding="0dp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="144dp"
        android:layout_height="142dp"
        android:src="@drawable/zipka" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:textColor="#000000"
        android:layout_toEndOf="@id/product_image"
        android:text="FMM HOODIE in BLACK"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/product_image" />

    <TextView
        android:id="@+id/product_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotolight"
        android:layout_toEndOf="@id/product_image"
        android:text="Brand: YUMMS"
        android:textSize="16sp"
        android:textColor="#9C9C9C"
        android:layout_marginStart="8dp"
        android:layout_below="@id/product_title" />

    <TextView
        android:id="@+id/product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/product_image"
        android:text="L"
        android:textColor="#000000"
        android:fontFamily="@font/robotobold"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/product_brand" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotobold"
        android:textColor="#000000"
        android:layout_toEndOf="@id/product_image"
        android:text="6 000 ла"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/product_size" />

    <ImageView
        android:id="@+id/product_favorite"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/product_price"
        android:layout_alignStart="@id/product_price"
        android:layout_marginTop="8dp"
        android:src="@drawable/followbascet" />

    <ImageView
        android:id="@+id/product_delete"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_below="@id/product_price"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/product_favorite"
        android:src="@drawable/cancelbascet" />

    <CheckBox
        android:id="@+id/product_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:layout_below="@id/product_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />




</RelativeLayout>

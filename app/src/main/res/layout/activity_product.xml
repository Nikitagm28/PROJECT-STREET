<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="20dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <!-- Название и цена продукта -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="20dp" />

                <Button
                    android:id="@+id/add_to_lookbook_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOOK BOOK"
                    android:fontFamily="@font/robotobold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/sizeXS"
                style="@style/SizeButtonStyle"
                android:layout_width="50dp"
                android:background="@drawable/button_border"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:text="XS" />

            <Button
                android:id="@+id/sizeS"
                style="@style/SizeButtonStyle"
                android:layout_width="50dp"
                android:background="@drawable/button_border"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:text="S" />

            <Button
                android:id="@+id/sizeM"
                style="@style/SizeButtonStyle"
                android:layout_width="50dp"
                android:background="@drawable/button_border"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:text="M" />

            <Button
                android:id="@+id/sizeL"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:text="L"
                style="@style/SizeButtonStyle"
                android:background="@drawable/button_border" />

            <Button
                android:id="@+id/sizeXL"
                android:layout_width="50dp"
                android:background="@drawable/button_border"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotolight"
                android:text="XL"
                style="@style/SizeButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/add_to_cart_button"
                android:layout_marginTop="16dp"
                android:layout_width="288dp"
                android:layout_height="51dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_add"
                android:fontFamily="@font/robotobold"
                android:text="Добавить в корзину"
                android:layout_marginStart="15dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/fav"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- Родительский LinearLayout для кнопки и текста описания -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/description_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:drawableEnd="@drawable/disdown"
                android:drawablePadding="8dp"
                android:paddingStart="15dp"
                android:paddingEnd="30dp"
                android:gravity="start|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#000000"
                android:fontFamily="@font/robotobold" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotobold"
                android:textColor="#000000"
                android:visibility="gone"
                android:padding="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
